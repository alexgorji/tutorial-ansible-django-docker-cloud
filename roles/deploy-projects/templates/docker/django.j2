services:
  backend-{{ name }}:
    image: "{{ pull_from }}"
    container_name: backend-{{ name }}
    restart: always
    command:
      - sh
      - -c
      - |
        export SECRET_KEY=$(python create_key.py)
        python3 manage.py collectstatic --noinput
        python3 manage.py makemigrations --noinput
        python3 manage.py migrate --noinput
        gunicorn {{ wsgi_path }}:application --bind 0.0.0.0:8000
    env_file:
      - "{{ env_file }}"
    expose:
      - 8000
    networks:
      - nginx-network
    

networks:
  nginx-network:
    external: true