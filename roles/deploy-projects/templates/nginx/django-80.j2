server {
    resolver 127.0.0.11 valid=30s ipv6=off;
    listen 80;
    server_name {{ domain }};

    location / {
      set ${{ proxy_name }} http://backend-{{ name }}:8000;
    
      proxy_pass ${{ proxy_name }};
           
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $host;
      proxy_redirect off;


    location /static/ {
      alias /var/www/{{ domain }}/staticfiles/;
    }

    location /protected/ {
      internal;
      alias /var/www/{{ domain }}/protected/;
    }

  }
}