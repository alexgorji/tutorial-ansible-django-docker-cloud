server {
    listen 443;
    server_name {{ domain }};

    location / {
        return 301 http://$host$request_uri;
    }
}

server {
    listen 80;
    server_name {{ domain }};

    location / {
      proxy_pass http://backend-{{ name }}:8000;
           
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $host;
      proxy_redirect off;
  }
}